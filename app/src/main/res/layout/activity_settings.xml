<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.SettingsActivity">

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/icon_backup"
        android:drawablePadding="@dimen/button_icon_padding"
        android:drawableTint="@android:color/black"
        android:gravity="left|center_vertical"
        android:text="@string/label_backup_data"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/icon_restore"
        android:drawablePadding="@dimen/button_icon_padding"
        android:drawableTint="@android:color/black"
        android:gravity="left|center_vertical"
        android:text="@string/label_restore_data"
        android:textAllCaps="false"
        android:textSize="18sp" />

</LinearLayout>